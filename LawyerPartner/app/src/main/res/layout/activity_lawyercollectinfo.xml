<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglawyerdetails"
    tools:context=".lawyercollectinfo">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="1dp"
        android:layout_below="@+id/lawscroll">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cardView800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/round_arrow_forward_24"
            android:layout_marginEnd="30dp"
            android:tint="@android:color/white"
            android:layout_marginBottom="20dp"
            android:elevation="0dp"
            app:elevation="0dp"
            android:backgroundTint="#2B8FEA" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:text="CONTINUE"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:padding="15dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtvabt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:text="ABOUT YOU"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

        <ScrollView
            android:id="@+id/lawscroll"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/lawpic1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/lawdetails"
                    android:layout_width="330dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    app:cardBackgroundColor="#66ffffff"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/name_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="15dp">

                            <EditText
                                android:id="@+id/editText31"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/ic_action_name"
                                android:ems="10"
                                android:hint="Full Name"
                                android:textAlignment="viewStart"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/number_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="75dp">

                            <EditText
                                android:id="@+id/editText32"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/ic_action_number"
                                android:ems="10"
                                android:hint="Phone Number"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/mail_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="135dp">

                            <EditText
                                android:id="@+id/editText33"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/ic_action_mail"
                                android:ems="10"
                                android:hint="E-Mail"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/pracyear_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="195dp">

                            <EditText
                                android:id="@+id/editText34"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/ic_action_dob"
                                android:ems="10"
                                android:hint="Years Of Practice"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/officeaddr_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="255dp">

                            <EditText
                                android:id="@+id/editText35"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/ic_action_city"
                                android:ems="10"
                                android:hint="Office Address"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/edu_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="315dp">

                            <EditText
                                android:id="@+id/editText800"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/education"
                                android:ems="10"
                                android:hint="Education"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/courtprac_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="375dp">

                            <EditText
                                android:id="@+id/editText801"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/gavel"
                                android:ems="10"
                                android:hint="Courts Of Practice"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif"/>
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/areaprac_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="435dp">

                            <EditText
                                android:id="@+id/editText802"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/gavel"
                                android:ems="10"
                                android:hint="Area Of Practice"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/conscharge_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="495dp">

                            <EditText
                                android:id="@+id/editText803"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/money"
                                android:ems="10"
                                android:hint="Consultation Charges"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/lawfirm_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="555dp">

                            <EditText
                                android:id="@+id/editText804"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/briefcase"
                                android:ems="10"
                                android:hint="Affiliated Law Firm (If Any)"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/casehandle_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="615dp">

                            <EditText
                                android:id="@+id/editText805"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/list"
                                android:ems="10"
                                android:hint="No. Of Cases Handled"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/casewon_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="675dp">

                            <EditText
                                android:id="@+id/editText806"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/checklist"
                                android:ems="10"
                                android:hint="No. Of Cases Won"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ipcspc_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="735dp">

                            <EditText
                                android:id="@+id/editText807"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/codebracs"
                                android:ems="10"
                                android:hint="IPC Specializations"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/moreinfo_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="795dp">

                            <EditText
                                android:id="@+id/editText808"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:drawableStart="@drawable/additional"
                                android:ems="10"
                                android:hint="Additional Info (If Any)"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif"/>
                        </com.google.android.material.textfield.TextInputLayout>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    <ImageView
        android:id="@+id/lawpic1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/txtvabt"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/avatar2x" />

</RelativeLayout>
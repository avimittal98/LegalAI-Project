<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:background="@android:color/transparent"
    android:id="@+id/lawyerparent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgprofilepic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_person_black_24dp" />

    <TextView
        android:id="@+id/txtv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toEndOf="@id/imgprofilepic"
        android:text="NAME:"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtvlawyername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toEndOf="@id/txtv1"
        android:hint="name"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/txtvlawyername"
        android:layout_toEndOf="@id/imgprofilepic"
        android:text="CONSULATION CHARGES:"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtvcharges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toEndOf="@id/txtv2"
        android:layout_below="@id/txtvlawyername"
        android:hint="amount"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/txtvcharges"
        android:layout_toEndOf="@id/imgprofilepic"
        android:text="YEARS OF EXPERIENCE:"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtvlawyerxp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toEndOf="@id/txtv3"
        android:layout_below="@id/txtvcharges"
        android:hint="years"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/txtvlawyerxp"
        android:layout_toEndOf="@id/imgprofilepic"
        android:text="CASES WON:"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtvlawyerwon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toEndOf="@id/txtv4"
        android:layout_below="@id/txtvlawyerxp"
        android:hint="woncases"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:textSize="15sp" />


</RelativeLayout>